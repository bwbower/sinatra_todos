<ul id="lists">
  <% sort_lists(@lists).each_with_index do |list, index| %>
    <li class=<%= list_complete?(list) %>>
      <a href="/lists/<%= index %>">
        <h2><%= list[:name] %></h2>
        <p><%= todos_remaining(list) %></p>
      </a>
    </li>
  <% end %>
</ul>

<div class="actions">
  <% content_for :header_links do %>
    <a class="add" href="/lists/new">New List</a>
  <% end %>
</div>