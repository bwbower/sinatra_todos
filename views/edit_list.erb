<section id="todos">
  <header>
    <h2>Editing "<%= @current_list[:name] %>"</h2>
    <ul>
      <li>
        <form class="delete" action="/lists/<%= params[:id] %>/delete" method="post">
          <button type="submit" class="delete">Delete Item</button>
        </form>
      </li>
    </ul>
  </header>
</section>

<form action="/lists/<%= params[:id] %>/edit" method="post">
  <dl>
    <dt>
      <label for="list_name">Enter a new name for your list:</label>
    </dt>
    <dd>
      <input name="list_name" placeholder="New Name" type="text" value="<%= params[:list_name] %>">
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Save">
    <a href="/lists/<%= params[:id] %>">Cancel</a>
  </fieldset>
</form>